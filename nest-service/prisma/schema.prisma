generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Solution {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  name                  String
  description           String
  kind                  String
  location              String
  mode                  String
  status                String
  defaultSectionId      String
  defaultSectionName    String
  defaultSubSectionId   String
  defaultSubSectionName String
  defaultEventId        String
  defaultEventName      String
  content               String
  problem               String
  title                 String
  email                 String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  solutionDetails              SolutionDetails?
  @@map("solutions") 
}

type SolutionDetails {
  title         String
  description   String
  rootCause     String
  countermeasure String
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  role      Role     
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users") 
}

model ActivityLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  action    String
  timestamp DateTime
  metadata  Json?

  @@map("activityLog") 
}

enum Role {
  USER
  ADMIN
}

